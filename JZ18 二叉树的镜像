/**
public class TreeNode {
    int val = 0;
    TreeNode left = null;
    TreeNode right = null;

    public TreeNode(int val) {
        this.val = val;

    }

}
*/
public class Solution {
    public void Mirror(TreeNode root) {
        if(root == null){ //空结点判断
            return;
        }
        if(root.left == null && root.right== null){
            return;
        }
        TreeNode temp=null;
        temp = root.right;
        root.right = root.left;
        root.left = temp; //根结点的左右子节点镜像
        if(root.left != null){
            Mirror(root.left);
        }
        if(root.right != null){
            Mirror(root.right);
        }
    }
}
